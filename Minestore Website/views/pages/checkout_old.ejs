  <script>
    loadError(document.getElementById("alert"), 0<%- error%>);

    // Checking if the user loaded the page through history.
    // If so, we reload the page to make sure they are 'logged in'.
    if(performance.navigation.type == 2) {
      location.reload(true);
    }

    function validate() {
      var full_name = document.getElementById("full_name");

      var regex = /^[a-zA-Z\s]+$/;
      if(!regex.test(full_name.value)) {
        full_name.focus();
        displayAlert(document.getElementById("alert"), "Full name must be alphabetic!", "red");
        return false;
      }

      var email_address = document.getElementById("email_address");
      regex = /\S+@\S+\.\S+/;
      if(!regex.test(email_address.value)) {
        email_address.focus();
        displayAlert(document.getElementById("alert"), "Illegal Email Address", "red");
        return false;
      }

      var zip_code = document.getElementById("zip_code");
      regex = /^\d+$/;
      if(!regex.test(zip_code.value)) {
        zip_code.focus();
        displayAlert(document.getElementById("alert"), "Invalid Zip Code", "red");
        return false;
      }

      return true;
    }
  </script>

